---
import HeaderLink from "./HeaderLink.astro";
---

<header>
	<nav>
		<div class="large top">
			<a href="/" class="logo"
				>logno.dev <span class="handwritten">blog</span></a
			>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links top">
			<a href="https://bsky.app/profile/logno.dev" target="_blank">
				<span class="sr-only">Follow me on Bsky</span>

